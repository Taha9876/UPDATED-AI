{
  "manifest_version": 3,
  "name": "Shopify Voice Automation",
  "version": "1.0",
  "description": "Control your Shopify store with voice commands.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "placeholder-logo.png",
      "48": "placeholder-logo.png",
      "128": "placeholder-logo.png"
    }
  },
  "icons": {
    "16": "placeholder-logo.png",
    "48": "placeholder-logo.png",
    "128": "placeholder-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
